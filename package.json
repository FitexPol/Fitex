{
  "name": "fitex",
  "version": "0.0.8",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "dev": "concurrently \"bun run --hot src/index.ts\" \"bun run tw:watch\"",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify & bun run tw:build",
    "start": "bun ./dist/index.js",
    "tw:watch": "tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
    "tw:build": "tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
    "tslint": "tsc --noEmit",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src & bun run tslint",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "i18n-extract": "bun run ./src/i18n/extract.ts",
    "docker:start": "bun run docker:build && bun run docker:run",
    "docker:build": "docker build --pull -t fitex:prod .",
    "docker:run": "docker run -d -p 3000:3000 fitex:prod",
    "docker:stop": "docker stop $(bun run docker:ps)",
    "docker:rm": "docker rm $(bun run docker:ps)",
    "docker:ps": "docker ps -a -q -f ancestor=fitex:prod",
    "docker:ps:v": "docker ps -a -f ancestor=fitex:prod"
  },
  "dependencies": {
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "@elysiajs/swagger": "^0.8.5",
    "@types/jsonwebtoken": "^9.0.6",
    "clsx": "^2.0.0",
    "elysia": "^0.8.17",
    "feather-icons": "^4.29.1",
    "mongoose": "^8.2.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@kitajs/ts-html-plugin": "^1.3.0",
    "@types/feather-icons": "^4.29.4",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "bun-types": "^1.0.30",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "tailwindcss": "^3.3.3",
    "typed-htmx": "^0.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
